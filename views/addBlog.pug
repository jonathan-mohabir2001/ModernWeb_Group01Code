extends layout


block content 

  html(lang="en")
    head
      meta(charset="UTF-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      title Add Blog page 
    
    
    body#input-blog-page
      div.jumbotron#user-message-input-section
        h1#user-display-name Welcome #{username} to blog creator!
        p.lead.d-flex.justify-content-center Add a blog below.
        hr.my-4
      
        form(method="POST", action="/blog/add")
          div.form-group-title.has-clear
            label(for="title")#add-blog-title-section Blogpost title/subject
            input.form-control(name="title", id="title", type="text", placeholder="Enter blog title/subject")

            div.form-group-title
              label(for="message") What's on your mind?
              textarea.form-control(name="message", id="message", type="text", placeholder="Express yo self", rows="5")
              

            div.form-group-submit
              input.btn.btn-primary.input-control.form-control.lg(type="submit")
            a.btn.btn-primary#sign-in-button(href="/blog") View All Blogs
            div.col-sm
