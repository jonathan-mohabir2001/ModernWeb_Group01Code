extends layout 



block content 
  html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
  
  body 

    h1 Sign in page below 

    if errors
      each error in errors
        p(style="color:red") #{error.msg}

    form(method="POST", action="/signIn")
      #form-group-email.form-group
        label(for="email") Email
        input#email.input-control(name="email", type="text")
      #form-group-password.form-group
        label(for="password") Password
        input#password.input-control(name="password", type="password")
      #form-group-submit.form-group
        input.btn.btn-primary.input-control(type="submit", value="Login")